<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_left_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="奥术大师多"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_right_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="奥术大师多"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.bin.view.view.vote.VotePercentResultView
        android:id="@+id/vote_percent_result_view"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/tv_left_result"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/tata_vote_img_vs" />

    <FrameLayout
        android:id="@+id/fl_left_option"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_toLeftOf="@id/iv_middle">

        <com.bin.view.view.vote.VotePercentItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_left_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:text="哈哈哈" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_right_option"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_toRightOf="@+id/iv_middle">

        <com.bin.view.view.vote.VotePercentItemView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isLeft="false" />

        <TextView
            android:id="@+id/tv_right_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:text="哈哈哈" />

    </FrameLayout>

</RelativeLayout>