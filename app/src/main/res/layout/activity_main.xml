<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onExpandableTextClick"
        android:text="可伸缩文本" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onVoteClick"
        android:text="投票"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadiusClick"
        android:text="圆角"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTextSwitcher"
        android:text="Text Switcher"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onAutoVerticalScrollText"
        android:text="Auto Vertical Scroll Text"
        />

    <CheckBox
        android:id="@+id/checkboxGrayMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gray Mode" />

</LinearLayout>