<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

      <!-- xml shape -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:text="xml shape"
          />

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@drawable/shape_radius"
          >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            />

      </FrameLayout>

      <!-- CardView -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginTop="16dp"
          android:text="CardView"
          />

      <!-- 阴影占用控件宽高 -->
      <android.support.v7.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          app:cardBackgroundColor="@color/config_color_white"
          app:cardCornerRadius="8dp"
          app:cardElevation="0dp"
          >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            />

      </android.support.v7.widget.CardView>

      <!-- Drawable -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginTop="16dp"
          android:text="Drawable"
          />

      <FrameLayout
          android:id="@+id/fl_radius"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            />

      </FrameLayout>

      <!-- final -->
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:layout_marginTop="16dp"
          android:text="final"
          />

      <com.bincn.views.layout.radius.RadiusLinearLayout
          android:id="@+id/layout_radius"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:background="@color/config_color_white"
          >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            />

      </com.bincn.views.layout.radius.RadiusLinearLayout>

    </LinearLayout>

  </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>